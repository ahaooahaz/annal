# completion.
apps=(kubectl helm jt)
for app in ${apps}; do
    if [ $(type ${app} >/dev/null 2>&1; echo $?) -eq 0 ]; then
        source <(${app} completion ${CURRSHELL})
    fi
done

apps=(stern)
